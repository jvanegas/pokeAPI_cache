{
  "compilerOptions": {
    "lib": [
      "ES2024",
      "DOM"
    ],
    "strict": true,
    "module": "ES2022",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2024",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [ "src/**/*.ts", "test/**/*.ts" ]
}